<mvc:View 
xmlns:mvc="sap.ui.core.mvc" 
xmlns="sap.m" 
xmlns:l="sap.ui.layout" 
xmlns:f="sap.ui.layout.form" 
xmlns:core="sap.ui.core" 
xmlns:ndc="sap.ndc"
xmlns:html="http://www.w3.org/1999/xhtml" 
controllerName="serviacero.custom.plugins.zpluginPutBatchWCPintado.zpluginPutBatchWCPintado.controller.MainView" 
width="100%" 
height="100%">
		
        <Panel
        id="idPluginPanel"
        width="100%"
        height="100%"
        expandable="false"
        expanded="false"
        accessibleRole="Region"
        backgroundDesign="Transparent"
        class="sapUiNoContentPadding">

       <!-- No se muestra en pantalla -->
            <!-- Inputs agrupados en un HBox para alinearlos horizontalmente -->
            <HBox id="quitar" width="80%" class="sapUiSmallMarginBottom sapUiSmallMarginBeginEnd" visible="false">
                <VBox width="40%" class="sapUiSmallMarginEnd">
                    <Label text="{i18n>quantity}" class="sapUiSmallMarginBottom sapUiSmallMarginTop"/>
                    <Input id="slotQty" enabled="false" width="100%" class="sapUiSmallMarginBottom"/>
                </VBox>
                <VBox width="40%">
                    <Label text="{i18n>slotType}" class="sapUiSmallMarginBottom sapUiSmallMarginTop"/>
                    <Input id="slotType" enabled="false" width="100%" class="sapUiSmallMarginBottom"/>
                </VBox>
            </HBox>

            <HBox width="80%" class="sapUiSmallMarginBottom">
              <MessageStrip text="{i18n>scannerReady}" type="Information" showIcon="true"
                customIcon="sap-icon://bar-code" class="sapUiSmallMarginTop sapUiSmallMarginBeginEnd sapUiSmallMarginBottom" />
            </HBox>


            <HBox width="80%" class="sapUiSmallMarginBottom sapUiSmallMarginBeginEnd" alignItems="Center">
                <Label text="{i18n>Barcode}" class="sapUiSmallMarginEnd"/>
                <Input id="scanInput" submit=".onBarcodeSubmit" class="sapUiSmallMarginEnd sapUiSmallMarginBeginEnd" />
                
                <ndc:BarcodeScannerButton
                    id="sampleBarcodeScannerButton"
                    scanSuccess="onScanSuccess"
                    scanFail="onScanError"
                    inputLiveUpdate="onScanLiveupdate"
                    dialogTitle="{i18n>BarcodeScanner}"
                    class="sapUiMediumMarginBegin sapUiSmallMarginEnd"
                />
            </HBox>
            
            <HBox width="97%" justifyContent="Center" class="sapUiSmallMarginTop sapUiSmallMarginBeginEnd">
            <Table busyIndicatorDelay="5" id="idSlotTable" items="{/ITEMS}"
                class="sapUiSmallMarginTop" width="100%" alternateRowColors="true">
                <headerToolbar>
                    <Toolbar >
                        <Title text="{i18n>Items} ({= ${/ITEMS}.length})" />
                        <ToolbarSpacer />
                        <Button id="clearButton" text="{i18n>clear}" press=".onPressClear" 
                        width="100px" class="sapUiSmallMarginBeginEnd" icon="sap-icon://clear-all" type="Reject"/>
                    </Toolbar>
                </headerToolbar>
                <columns>
                    <Column width="30%" hAlign="Left" vAlign="Middle" visible="false">
                        <Text text="{i18n>Slot}" visible="false" />
                    </Column>
                    <Column width="30%" hAlign="Left" vAlign="Middle" >
                        <Text text="{i18n>materialCode}" />
                    </Column>
                    <Column width="30%" hAlign="Left" vAlign="Middle" >
                        <Text text="{i18n>loteCode}"  />
                    </Column>
                    <Column width="60%" hAlign="Left" vAlign="Middle">
                        <Text text="{i18n>Value}" visible="false" />
                    </Column>
                    <Column width="10%" hAlign="Center" vAlign="Middle">
                        <Text text="{i18n>ActionModify}" visible="false"/>
                    </Column>
                    <Column width="10%" hAlign="Center" vAlign="Middle">
                        <Text text="{i18n>ActionDelete}" visible="false" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem vAlign="Middle">
                        <cells>
                            <Text text="{attribute}" />
                            <Input value="{path: 'value', formatter: '.formatter.getMaterial'}" enabled="false" />
                            <Input value="{path: 'value', formatter: '.formatter.getLote'}" enabled="false" />
                            <Input value="{value}" enabled="false" visible="false"/>
                            <ndc:BarcodeScannerButton 
                                icon="sap-icon://bar-code" 
                                scanSuccess=".onScanSlotSuccess"
                                scanFail=".onScanError"
                                dialogTitle="{i18n>BarcodeScanner}"
                            />
                            <Button icon="sap-icon://delete" press=".onDeleteSlot" type="Reject"/>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
            </HBox>
        
    </Panel>		
        
  
</mvc:View>